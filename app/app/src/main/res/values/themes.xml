<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SignSense" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.SignSense.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="background">@color/primary_bg</item>

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/highlight</item>
        <item name="colorPrimaryVariant">@color/primary_accent</item>
        <item name="colorOnPrimary">@color/primary_bg</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_accent</item>
        <item name="colorOnSecondary">@color/highlight</item>
        <item name="colorAccent">@color/secondary_accent</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorOnPrimary</item>
        <!-- Text color -->
        <item name="android:textColorPrimary">@color/secondary</item>
        <item name="android:textColorSecondary">@color/secondary_accent</item>
        <item name="android:textColorTertiary">@color/highlight</item>
    </style>

    <style name="Theme.SignSense.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="Theme.SignSense.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="Theme.SignSense.Fullscreen" parent="Theme.SignSense">
        <item name="android:actionBarStyle">@style/Widget.Theme.SignSense.ActionBar.Fullscreen</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="ThemeOverlay.SignSense.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/light_blue_600</item>
        <item name="fullscreenTextColor">@color/light_blue_A200</item>
    </style>

    <style name="Theme.SignSense.PreferenceScreen">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_accent</item>
        <item name="colorOnPrimary">@color/primary_bg</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_accent</item>
        <item name="colorOnSecondary">@color/highlight</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorOnPrimary</item>
        <!-- Text color -->
        <item name="android:textColorPrimary">@color/light_blue_900</item>
        <item name="android:textColorSecondary">@color/light_blue_900</item>
        <item name="android:textColorTertiary">@color/light_blue_900</item>
    </style>

</resources>