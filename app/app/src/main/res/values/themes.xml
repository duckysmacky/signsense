<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme -->
    <style name="Theme.Signsense" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <!-- Background -->
        <item name="background">@color/light.primary.bg</item>

        <!-- Primary brand color -->
        <item name="colorPrimary">@color/light.primary</item>
        <item name="colorPrimaryDark">@color/light.highlight</item>
        <item name="colorPrimaryVariant">@color/light.primary.accent</item>
        <item name="colorOnPrimary">@color/light.primary.bg</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/light.secondary</item>
        <item name="colorSecondaryVariant">@color/light.secondary.accent</item>
        <item name="colorOnSecondary">@color/light.highlight</item>
        <item name="colorAccent">@color/light.secondary.accent</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor">?attr/colorOnPrimary</item>

        <!-- Text color -->
        <item name="android:textColorPrimary">@color/light.secondary</item>
        <item name="android:textColorSecondary">@color/light.secondary.accent</item>
        <item name="android:textColorTertiary">@color/light.highlight</item>
    </style>
</resources>