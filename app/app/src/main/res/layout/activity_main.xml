<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.75" android:id="@+id/card_switchButtons" android:elevation="20dp">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_marginHorizontal="8dp"
                android:layout_marginVertical="8dp" android:paddingVertical="8dp"
                android:id="@+id/layout_switchButtons">
            <Button
                    android:id="@+id/button_switchCamera"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:drawableLeft="@drawable/ic_menu_camera"
                    android:drawablePadding="2dp"
                    android:drawableTint="#FFFFFF"
                    android:onClick="switchCamera"
                    android:text="@string/label_openCamera_button"
                    android:textAlignment="center"
                    android:textSize="12sp"
            />
            <Button
                    android:id="@+id/button_switchSelector"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:drawableLeft="@drawable/ic_menu_slideshow"
                    android:drawablePadding="2dp"
                    android:drawableTint="#FFFFFF"
                    android:onClick="switchImageSelector"
                    android:text="@string/label_openSelector_button"
                    android:textAlignment="center"
                    android:textSize="12sp"
                    android:layout_marginTop="8dp"/>
            <Button
                    android:id="@+id/button_switchInfo"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:drawableLeft="@drawable/baseline_info_24"
                    android:drawablePadding="2dp"
                    android:drawableTint="#FFFFFF"
                    android:onClick="switchImageSelector"
                    android:text="@string/label_openInfo_button"
                    android:textAlignment="center"
                    android:textSize="12sp"
                    android:layout_marginTop="8dp"/>
            <Button
                    android:id="@+id/button_switchSettings"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:drawableLeft="@drawable/baseline_settings_24"
                    android:drawablePadding="2dp"
                    android:drawableTint="#FFFFFF"
                    android:onClick="switchImageSelector"
                    android:text="@string/label_openSettings_button"
                    android:textAlignment="center"
                    android:textSize="12sp"
                    android:layout_marginTop="8dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="200dp" app:srcCompat="@drawable/signsense_logo_wide_trans"
            android:id="@+id/imageView"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.100000024" android:layout_marginTop="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>